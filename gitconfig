[user]
  name = Mitul Shah
  email = 45.mitul@gmail.com
[core]
  editor = nvim
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
[color]
  ui = auto
[color "branch"]
  current = yellow
  local = green
  remote = cyan
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = green
  changed = yellow
  untracked = red
[push]
  default = current
[merge]
  tool = vimdiff
[alias]
  b = branch
  s = status

  d = diff
  dc = diff --cached

  pr = pull --rebase
  r = rebase

  ps = push
  fps = push -f
  ups = !git push --set-upstream origin $(git branch)

  a = add
  c = commit
  ca = commit -a
  cam = commit -am

  st = stash
  sta = stash apply

  co = checkout
  cob = checkout -b
